<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tan_background"
    tools:context=".MainActivity">

    <TextView

        android:text="Family Contacts"
        android:id="@+id/Family_contacts"
        style="@style/CategoryStyle"
        android:background="@color/color_Family"/>
    <TextView
        android:id="@+id/Friends_Contact"
        style="@style/CategoryStyle"
        android:text="Friends Contact"
        android:background="@color/color_Friends"
        />
    <TextView
        android:id="@+id/Favourites_Contacts"
        style="@style/CategoryStyle"
        android:text="Favourites Contacts"
        android:background="@color/color_Favourites"
        />

</LinearLayout>